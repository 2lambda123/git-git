<p><button class="account" id="createAccount">Create account</button></p>
<a id="result" href="./data-file.html"></a>

<script>
    const fullNameInput = document.getElementById("fullName");
    const emailInput = document.getElementById("email");
    const phoneInput = document.getElementById("phone");
    const cnicInput = document.getElementById("password");
    const createAccountButton = document.getElementById("createAccount");

    // Add an event listener to the button to perform an action when it's clicked
    createAccountButton.addEventListener("click", function () {
        // Get the values from the input fields
        const fullName = fullNameInput.value;
        const email = emailInput.value;
        const phone = phoneInput.value;
        const cnic = cnicInput.value;

        // Check if any of the fields are empty
        if (fullName === "" || email === "" || phone === "" || cnic === "") {
            alert("Please fill in all fields.");
        } else {
           document.getElementById(style="result")  
             
        }
    });
</script>
